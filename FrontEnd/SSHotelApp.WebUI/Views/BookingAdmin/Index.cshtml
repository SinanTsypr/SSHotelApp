@model List<ResultBookingDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

<h2>Rezervasyonlar</h2>

<div class="card-title">
    <h4>Rezervasyonlar</h4>
</div>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Misafir</th>
                <th>Giriş Tarihi</th>
                <th>Çıkış Tarihi</th>
                <th>Durum</th>
                <th>Onayla</th>
                <th>İptal Et</th>
                <th>Beklet</th>
                <th>Güncelle</th>
                <th>Detaylar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    @*<input type="hidden" asp-for="@item.BookingId" />*@
                    <th>@count</th>
                    <td>@item.Name</td>
                    <td>@item.CheckIn.ToShortDateString()</td>
                    <td>@item.CheckOut.ToShortDateString()</td>
                    <td>
                        <span class="badge badge-primary px-2">@item.Status</span>
                    </td>
                    <td><a asp-controller="BookingAdmin" asp-action="ApprovedBooking" class="btn btn-outline-primary">Onayla</a></td>
                    <td><a href="#" class="btn btn-outline-danger">İptal Et</a></td>
                    <td><a href="#" class="btn btn-outline-warning">Beklet</a></td>
                    <td><a href="#" class="btn btn-outline-info">Güncelle</a></td>
                    <td><a href="#" class="btn btn-outline-dark">Detaylar</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>